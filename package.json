{
  "name": "web",
  "version": "1.0.0",
  "description": "Interactive web-based animator for the 39C3 variable font, featuring dynamic weight interpolation and brand-compliant color modes.",
  "keywords": [],
  "homepage": "https://github.com/o1y/39c3-logo-animator#readme",
  "bugs": {
    "url": "https://github.com/o1y/39c3-logo-animator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/o1y/39c3-logo-animator.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "format": "sort-package-json && prettier --write \"**/*.{js,json,html,css}\"",
    "format:check": "sort-package-json --check && prettier --check \"**/*.{js,json,html,css}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -p jsconfig.json --noEmit 2>&1 | grep '^src/' && exit 1 || exit 0"
  },
  "browserslist": [
    "defaults and fully supports es6-module"
  ],
  "dependencies": {
    "alpinejs": "^3.15.1",
    "gif.js": "^0.2.0",
    "jspdf": "^3.0.4",
    "opentype.js": "https://github.com/o1y/opentype.js#ff6189bef3336b5666f1105d611cb1a437bf1c8a",
    "redis": "^5.10.0",
    "webm-writer": "^1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@napi-rs/canvas": "^0.1.84",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.6.2",
    "rollup-plugin-license": "^3.6.0",
    "sort-package-json": "^3.6.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.16"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.25.0",
    "@rollup/rollup-linux-x64-gnu": "^4.41.0"
  }
}
